{
  "compilerOptions": {
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@": ["./src/index"],
      "@/*": [
        "./src/*"
      ]
    },
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
